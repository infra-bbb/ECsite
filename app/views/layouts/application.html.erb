<!DOCTYPE html>
<html>
  <head>
    <title>ECsite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
  <% if end_user_signed_in? %>
    <%= link_to "マイページ", public_end_user_path(current_end_user), class: 'glyphicon glyphicon-log-out' %>
    <%= link_to "カート一覧", "#", class: 'glyphicon glyphicon-log-out' %>
    <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' %>
  <% elsif admin_signed_in? %>
    <%= link_to "受付一覧", "#", class: 'glyphicon glyphicon-log-out' %>
    <%= link_to "カート一覧", "#", class: 'glyphicon glyphicon-log-out' %>
    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' %>
  <% else %>
    <%= link_to "エンドユーザーログイン", new_end_user_session_path, class: 'glyphicon glyphicon-home' %>
    <%= link_to "エンドユーザ会員登録", new_end_user_registration_path, class: 'glyphicon glyphicon-edit' %>
  <% end %>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
