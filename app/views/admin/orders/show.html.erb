<div class="row">
  <h3><strong>注文詳細画面</strong></h3>
  <% if flash[:notice] %>
    <div class="col-xs-6">
      <div class="info alert-info">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true">
          <span class="lead"><%= flash[:notice] %></span>
        </span>
      </div>
    </div>
  <% end %>
  <div class="col-xs-6 col-xs-offset-1">
    <div class="row">
      <div class="col-xs-4">
        <h4><strong>購入者</strong></h4>
      </div>
      <div class="col-xs-8">
        <h4><u><%= link_to @order_name, admin_end_user_path(@order) %></u></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <h4><strong>配送先</strong></h4>
      </div>
      <div class="col-xs-8">
        <h4>
          〒<%= @order.postal_code %>
           <%= @order.address %>
          <br><%= @order.recipient_name %>
        </h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <h4><strong>支払方法</strong></h4>
      </div>
      <div class="col-xs-8">
        <h4><%= @order.payment_way %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <h4><strong>注文ステータス</strong></h4>
      </div>
      <div class="col-xs-8" style="margin-top: 5px;">
        <%= form_for(@order, url: admin_delivery_path(@order)) do |f| %>
          <div class="col-xs-5">
            <%= f.select :status, Order.statuses.keys, { include_blank: @order.status }, class: "form-control" %>
          </div>
          <div class="col-xs-4">
            <%= f.submit "更新", class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row" style="padding-top: 50px;">
  <div class="col-xs-7">
    <table class="table">
      <thead>
        <tr class="active">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="2">製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td>¥<%= order_detail.item.price %></td>
            <td><%= order_detail.amount %></td>
            <td>¥<%= order_detail.subtotal %></td>
            <%= form_with model: order_detail, url: admin_order_path(order_detail) do |f| %>
              <td>
                <%= f.select :status, OrderDetail.statuses, { include_blank: order_detail.status }, class: "form-control"%>
              </td>
              <td>
                <%= f.submit "更新", class: "btn btn-info" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-xs-3 col-xs-offset-2">
    <div class="row">
      <div class="col-xs-6">
        <h4><strong>商品合計</strong></h4>
      </div>
      <div class="col-xs-6">
        <h4><%= @order.total_price - @order.postage %>円</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <h4><strong>送料</strong></h4>
      </div>
      <div class="col-xs-6">
        <h4><%= @order.postage %>円</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
      <h4><strong>請求金額合計</strong></h4>
      </div>
      <div class="col-xs-6">
        <h4><strong><%= @order.total_price %>円</strong></h4>
      </div>
    </div>
  </div>
</div>
