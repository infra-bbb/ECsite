<div class="row">
  <h3><strong>注文一覧画面</strong></h3>
  <div class="col-xs-8 col-xs-offset-2">
    <table class="table">
      <thead>
        <tr class="active">
          <th>購入日時</th>
          <th>購入日</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at, admin_order_path(order) %></td>
            <td><%= order.end_user.last_name + order.end_user.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>